<h2>Modificar Novedad</h2>

{{#if error}}
    <p style="color:red">{{message}}</p>
{{/if}}

<form action="/admin/novedades/modificar" method="POST">
    <input type="hidden" name="id" value="{{novedad.id}}">

    <label>Título:</label>
    <input type="text" name="titulo" value="{{novedad.titulo}}" required>

    <label>Descripción:</label>
    <textarea name="descripcion" required>{{novedad.descripcion}}</textarea>

    <label>Fecha de Publicación:</label>
    <input type="date" name="fecha_publicacion"
           value="{{novedad.fecha_publicacion}}" required>

    <label>Estado:</label>
    <select name="estado" required>
        <option value="1" {{#if novedad.estado}}selected{{/if}}>Activo</option>
        <option value="0" {{#unless novedad.estado}}selected{{/unless}}>Inactivo</option>
    </select>

    <button type="submit">Modificar</button>
</form>
